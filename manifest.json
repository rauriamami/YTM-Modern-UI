{
  "manifest_version": 3,
  "name": "YouTube Music Modern UI",
  "version": "0.9.2",
  "description": "YouTube Musicをもっと美しく",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://music.youtube.com/*",
    "https://lrclib.net/*",
    "https://lrchub.coreone.work/*",
    "https://api-free.deepl.com/*",
    "https://api.deepl.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://music.youtube.com/*"],
      "js": ["content.js"],
      "css": ["style.css"],
      "run_at": "document_idle"
    }
  ]
}
